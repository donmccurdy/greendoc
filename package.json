{
	"name": "root",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "concurrently 'yarn build:watch' 'lerna run dev'",
		"build": "lerna run build",
		"build:watch": "lerna watch --scope=$LERNA_PACKAGE_NAME --include-dependents --no-private -- lerna run build",
		"test": "lerna run test",
		"test:watch": "lerna watch --scope=$LERNA_PACKAGE_NAME -- lerna run test",
		"clean": "lerna run clean --parallel",
		"lint": "lerna run lint --parallel",
		"preversion": "yarn clean && yarn build && yarn test",
		"postpublish": "git push && git push --tags"
	},
	"devDependencies": {
		"@types/node": "^20.3.1",
		"ava": "^5.2.0",
		"concurrently": "^8.2.0",
		"lerna": "^8.0.0",
		"microbundle": "^0.15.1",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"rimraf": "^5.0.0",
		"svelte": "^4.2.0",
		"ts-morph": "^20.0.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4",
		"vite": "^4.3.5"
	}
}

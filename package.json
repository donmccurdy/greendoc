{
	"name": "root",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "concurrently 'yarn build:watch' 'lerna run dev'",
		"build": "lerna run build",
		"build:watch": "lerna watch --scope=$LERNA_PACKAGE_NAME --include-dependents --no-private -- lerna run build",
		"test": "lerna run test",
		"test:watch": "lerna watch --scope=$LERNA_PACKAGE_NAME -- lerna run test",
		"clean": "lerna run clean",
		"lint": "lerna run lint",
		"preversion": "yarn clean && yarn build && yarn test",
		"postpublish": "git push && git push --tags"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.3.1",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/node": "^22.0.0",
		"ava": "^6.1.2",
		"concurrently": "^9.0.0",
		"lerna": "^8.1.2",
		"mdsvex": "^0.12.0",
		"microbundle": "^0.15.1",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.3",
		"rimraf": "^6.0.0",
		"svelte": "^4.2.15",
		"svelte-check": "^4.0.0",
		"svelte-preprocess": "^6.0.0",
		"ts-morph": "^23.0.0",
		"tsx": "^4.7.3",
		"typescript": "^5.4.5",
		"vite": "^6.0.0"
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--import=tsx"
		]
	}
}
